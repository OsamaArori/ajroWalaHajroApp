<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".donorRegister">

    <TextView
        android:id="@+id/txtwelcome"
        android:text="اهلاً بك"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/fontt"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/txtsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/fontt"
        android:text="يرجى تعبئة البيانات التالية لانشاء حسابك الجديد"
        android:textSize="20sp"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/roundedcorner"
        android:layout_marginTop="5dp"
        android:hint="الاسم"
        android:fontFamily="@font/fontt"
        android:maxLines="1"
        android:padding="5dp"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/roundedcorner"
        android:layout_marginTop="5dp"
        android:hint="الايميل"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/fontt"
        android:maxLines="1"
        android:padding="5dp"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/roundedcorner"
        android:layout_marginTop="5dp"
        android:hint="رقم الهاتف"
        android:inputType="number"
        android:fontFamily="@font/fontt"
        android:maxLines="1"
        android:padding="5dp"
        android:selectAllOnFocus="true" />
    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/roundedcorner"
        android:layout_marginTop="5dp"
        android:hint="العنوان"
        android:fontFamily="@font/fontt"
        android:maxLines="1"
        android:padding="5dp"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/roundedcorner"
        android:layout_marginTop="5dp"
        android:hint="كلمة السر"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="5dp"
        android:fontFamily="@font/fontt"
        android:selectAllOnFocus="true"
        />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/roundedcorner"
        android:layout_marginTop="5dp"
        android:hint="اعادة كلمة السر"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:fontFamily="@font/fontt"
        android:maxLines="1"
        android:padding="5dp"
        android:selectAllOnFocus="true"
        />

    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundedcornerbutton"
        android:enabled="true"
        android:fontFamily="@font/fontt"
        android:text="انشاء حساب" />

</LinearLayout>