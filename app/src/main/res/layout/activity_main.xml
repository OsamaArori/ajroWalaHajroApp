<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp"
    tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="سجل دخولك"
            android:fontFamily="@font/fontt"
            android:textAlignment="center"
            android:padding="15dp"
            android:textSize="40sp"/>

        <ImageButton
            android:id="@+id/donorBtn"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/donor" />

        <ImageButton
            android:id="@+id/needyBtn"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/need"
            android:text="المتلقي" />

        <ImageButton
            android:id="@+id/adminBtn"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/admin" />

</LinearLayout>
